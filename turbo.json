{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_PASS",
        "VERCEL_URL",
        "PORT",
        "VERCEL",
        "ALLOW_ROBOTS",
        "CURRENT_DOMAIN",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "SKIP_ENV_VALIDATION",
        "NEXT_PUBLIC_SANITY_DATASET",
        "NEXT_PUBLIC_SANITY_PROJECT_ID",
        "NEXT_PUBLIC_CAPTCHA_SITE_KEY",
        "NEXT_PUBLIC_SANITY_API_TOKEN",
        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY",
        "NEXT_PUBLIC_AKIJ_ECOM",
        "FACEBOOK_ID",
        "FACEBOOK_SECRET",
        "GOOGLE_ID",
        "GOOGLE_SECRET",
        "SECRET_KEY",
        "APP_PORT",
        "APP_BASE_URL",
        "MONGO_URI",
        "APP_NAME",
        "JWT_SECRET_KEY",
        "JWT_TOKEN_COOKIE_EXPIRES",
        "JWT_ACCESS_TOKEN_EXPIRES",
        "WT_REFRESH_TOKEN_EXPIRES",
        "SEND_GRID_API_KEY",
        "SEND_SENDER_MAIL"
      ]
    },
    "test": {
      "dependsOn": ["lint", "^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
